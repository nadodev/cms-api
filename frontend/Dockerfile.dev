FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Copy dev script
COPY dev.sh /app/dev.sh
RUN chmod +x /app/dev.sh

# Expose port
EXPOSE 3000

# Start Next.js in development mode with hot-reload
CMD ["/app/dev.sh"]

